<VBox fx:controller="sample.Controller" spacing="10"
      xmlns:fx="http://javafx.com/fxml" alignment="TOP_LEFT" >
    <padding>
        <Insets top="10" right="20" bottom="30" left="40"/>
    </padding>
    <VBox>
        <VBox.margin>
            <Insets>
                <bottom>20</bottom>
            </Insets>
        </VBox.margin>
    </VBox>
    <HBox alignment="BASELINE_LEFT" spacing="10">
        <Label fx:id="fileName" text="Choose File"/>
        <Button fx:id="chooseBtn" onAction="#fileBtnHandler" text="Choose File"></Button>
    </HBox>

    <HBox fx:id="limitBox" alignment="BASELINE_LEFT" spacing="10" visible="false">
        <Label text="Set Limit"/>

        <Slider fx:id="limitSlider" minWidth="150" min="0" max="100" blockIncrement="1"/>

        <TextField editable="false" fx:id="valueTxt" maxWidth="50"></TextField>
    </HBox>

    <TableView fx:id="contentTable" prefHeight="500" prefWidth="400">
        <columns>

            <TableColumn text="Word" prefWidth="200">
            </TableColumn>
            <TableColumn text="Frequency" prefWidth="200">
            </TableColumn>
        </columns>

    </TableView>
     
    <Button alignment="BOTTOM_RIGHT" text="Reset" fx:id="resetBtn" onAction="#resetBtnHandler" /> 
</VBox>